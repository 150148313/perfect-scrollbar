{
  "name": "perfect-scrollbar",
  "version": "1.0.0-dev",
  "description": "Minimalistic but perfect custom scrollbar plugin",
  "author": "Hyunje Jun <me@noraesae.net>",
  "main": "dist/perfect-scrollbar.common.js",
  "module": "dist/perfect-scrollbar.esm.js",
  "style": "css/perfect-scrollbar.css",
  "unpkg": "dist/perfect-scrollbar.js",
  "jspm": {
    "main": "dist/perfect-scrollbar.common.js",
    "registry": "jspm"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/noraesae/perfect-scrollbar"
  },
  "bugs": {
    "url": "https://github.com/noraesae/perfect-scrollbar/issues"
  },
  "keywords": [
    "jquery-plugin",
    "frontend",
    "scroll",
    "scrollbar"
  ],
  "files": [
    "dist",
    "types",
    "jquery.js"
  ],
  "types": "types/index.d.ts",
  "scripts": {
    "test": "npm run format:lint && npm run build",
    "build": "tsc",
    "format": "prettier --write --single-quote --trailing-comma all --parser typescript 'src/**/*.ts'",
    "format:lint": "prettier -l --single-quote --trailing-comma all --parser typescript 'src/**/*.ts'",
    "release": "rm -rf dist && npm run build && npm publish"
  },
  "license": "MIT",
  "devDependencies": {
    "prettier": "^1.6.1",
    "rollup": "^0.50.0",
    "typescript": "^2.4.2",
    "uglify-js": "^3.1.1"
  }
}
